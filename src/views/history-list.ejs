<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Property list</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles-header.css">
    <link rel="stylesheet" href="/styles-property-list.css">
</head>

<body>
    <header>
        <nav>
            <ul class="nav-list">
                <li><a href="/home" class="home">Home</a></li>
                <li><a href="/agent" class="agents">Agents</a></li>
                <li><a href="/property-list" class="properties">List of Properties</a></li>
                <li><a href="/customers" class="customers">Customer List</a></li>
                <li><a href="#" class="profile">Profile</a></li>
            </ul>
        </nav>
    </header>

    <div class="container-flex">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Date</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Property Address</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((item)=> {%>
                    <tr class="items">
                        <th scope="row">
                            <%= item.history_id %>
                        </th>
                        <td>
                            
                            <%= item.rol %>
                        </td>
                        <td>
                            <%= item.cost %>
                        </td>
                        <td>
                            <%= item.date.toLocaleDateString() %>
                        </td>
                        <td>
                            <%= item.customer_id %>
                        </td>
                        <td>
                            <%= item.property_id %>
                        </td>
                        <td class="buttons">
                            <a href="/history-edit/<%= item.history_id %>" class="btn-red">Edit</a>
                            <a href="/history-delete/<%= item.history_id%>/<%= item.property_id %>">
                                <button class="btn-delete">Delete</button>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <div class="add-position" action="/new-property">
            <a href="/new-history/<%= property_id%>" class="text">
                <button class="btn btn-danger add-property">Add a New History Item</button>
            </a>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>