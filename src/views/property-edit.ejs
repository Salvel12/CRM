<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Property</title>
    <link rel="stylesheet" href="/styles-header.css">
    <link rel="stylesheet" href="/styles-new-property.css">
</head>

<body>
    <header>
        <nav>
            <ul class="nav-list">
                <li><a href="/home" class="home">Home</a></li>
                <li><a href="/agent" class="agents">Agents</a></li>
                <li><a href="/property-list" class="properties">List of Properties</a></li>
                <li><a href="/customers" class="customers">Customer List</a></li>
                <li><a href="#" class="profile">Profile</a></li>
            </ul>
        </nav>
    </header>
    <div class="form-container">
    <% if (property && agents) { %>
        <form action="/updateproperty" method="POST">
            <!-- Data of property table -->
            <label for="">Apartment information</label>
            <input type="number" id="property_id" name="property_id" value="<%= property.property_id%>" hidden>
            <select name="property_type" id="property_type" required>
                <option value="" disabled selected>Select the type of property</option>
                <option <%= property.property_type === 'Apartment' ? "selected" : '' %> value="Apartment">Apartment</option>
                <option <%= property.property_type === 'House' ? "selected" : '' %> value="House">House</option>
            </select>
            <select name="property_bussines_type" id="property_bussines_type" required>
                <option value="" disabled selected>Select the state of the property</option>
                <option <%= property.property_bussines_type === 'Sale' ? "selected" : '' %> value="Sale">Sale</option>
                <option <%= property.property_bussines_type === 'Sold' ? "selected" : '' %> value="Sold">Sold</option>
                <option <%= property.property_bussines_type === 'Lease' ? "selected" : '' %> value="Lease">Lease</option>
                <option <%= property.property_bussines_type === 'Leased' ? "selected" : '' %> value="Leased">Leased</option>
            </select>
            <input type="text" name="address" id="address" required placeholder="Address" value="<%= property.address%>">
            <input type="number" name="price" id="price" min="0" required placeholder="Price" value="<%= property.price%>">
            <input type="number" name="rooms" id="rooms" min="0" required placeholder="Rooms" value="<%= property.rooms%>">
            <input type="number" name="bathrooms" id="bathrooms" min="0" required placeholder="Bathrooms" value="<%= property.bathrooms%>">
            <select name="green_zone" id="green_zone" required>
                <option value="" disabled selected>Select if the property have a green zone</option>
                <option <%= property.green_zone === 'Yes' ? "selected" : '' %> value="Yes">Yes</option>
                <option <%= property.green_zone === 'No' ? "selected" : '' %> value="No">No</option>
            </select>
            <input type="number" name="meters" id="meters" min="0" required placeholder="Meters" value="<%= property.meters%>">
            <select name="agent_name" id="agent_name" required>
                <% agents.forEach((agent)=> {%>
                    <option <%= property.agent_id === agent.agent_id ? "selected" : '' %>><%= agent.name%></option>
                    <% }); %>
            </select>
            <button class="button" type="submit">Guardar</button> 
            <a href="/property-list" class="button-link">Cancel</a>
        </form>
        <% } %>
    </div>
</body>

</html>